{
    "manifest_version": 2,
    "name": "Video Speed Controller",
    "version": "0.1",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "icons": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+A",
                "mac": "MacCtrl+Shift+A"
            },
            "description": "Opens popup.html"
        },
        "speed_down": {
            "suggested_key": {
                "default": "Alt+Comma",
                "mac": "Alt+Comma"
            },
            "description": "Opens popup.html"
        },
        "speed_up": {
            "suggested_key": {
                "default": "Alt+Period",
                "mac": "Alt+Period"
            },
            "description": "Opens popup.html"
        },
        "reset_speed": {
            "suggested_key": {
                "default": "Alt+Space",
                "mac": "Alt+Space"
            },
            "description": "Opens popup.html"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}